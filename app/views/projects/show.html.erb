<div class="min-h-screen bg-sand-50">
  <div class="mx-auto max-w-6xl px-6 py-14">
    <div class="mb-10">
      <%= link_to "← Back to projects", projects_path, class: "text-sm font-medium text-rosewood-700 hover:text-rosewood-800" %>
    </div>

    <div class="grid gap-10 lg:grid-cols-12">
      <!-- Main -->
      <div class="lg:col-span-8">
        <div class="rounded-2xl bg-white p-8 ring-1 ring-sand-200 shadow-soft">
          <div class="flex flex-wrap items-center justify-between gap-4">
            <div>
              <% if @project.featured? %>
                <p class="text-xs font-medium text-rosewood-700">Featured</p>
              <% end %>

              <h1 class="mt-2 text-3xl font-semibold tracking-tight text-ink-900 sm:text-4xl">
                <%= @project.title %>
              </h1>

              <p class="mt-3 text-base leading-relaxed text-ink-700">
                <%= @project.summary %>
              </p>
            </div>

            <div class="flex flex-col items-end gap-2">
              <span class="inline-flex items-center rounded-full bg-sand-100 px-3 py-1 text-xs font-medium text-ink-700 ring-1 ring-sand-200">
                <%= @project.role.presence || "Full-stack" %>
              </span>

              <% if @project.published_at.present? %>
                <span class="text-xs text-ink-500">
                  <%= @project.published_at.to_date.strftime("%B %Y") %>
                </span>
              <% end %>
            </div>
          </div>

          <% tech = tech_stack_list(@project) %>
          <% if tech.any? %>
            <div class="mt-6 flex flex-wrap gap-2">
              <% tech.each do |tag| %>
                <span class="inline-flex items-center rounded-full bg-sand-50 px-2.5 py-1 text-xs font-medium text-ink-700 ring-1 ring-sand-200">
                  <%= tag %>
                </span>
              <% end %>
            </div>
          <% end %>

          <div class="mt-8 grid gap-4 sm:grid-cols-2">
            <% if @project.client.present? %>
              <div class="rounded-2xl bg-sand-50 p-5 ring-1 ring-sand-200">
                <p class="text-xs font-medium text-ink-600">Client / Org</p>
                <p class="mt-1 text-sm font-medium text-ink-900"><%= @project.client %></p>
              </div>
            <% end %>

            <% if @project.results.present? %>
              <div class="rounded-2xl bg-sand-50 p-5 ring-1 ring-sand-200">
                <p class="text-xs font-medium text-ink-600">Results</p>
                <p class="mt-1 text-sm text-ink-900"><%= simple_format(@project.results) %></p>
              </div>
            <% end %>
          </div>

          <div class="mt-10 flex flex-wrap gap-3">
            <% if @project.case_study.present? %>
              <%= link_to "Read the case study →", case_study_path(@project.case_study),
                class: "inline-flex items-center rounded-xl bg-rosewood-600 px-5 py-2.5 text-sm font-medium text-white hover:bg-rosewood-700 focus:outline-none focus:ring-2 focus:ring-rosewood-200" %>
            <% elsif signed_in? %>
              <%= link_to "Create case study", new_case_study_path(project_id: @project.id),
                class: "inline-flex items-center rounded-xl bg-rosewood-600 px-5 py-2.5 text-sm font-medium text-white hover:bg-rosewood-700 focus:outline-none focus:ring-2 focus:ring-rosewood-200" %>
            <% end %>

            <% if signed_in? %>
              <%= link_to "Edit this project", edit_project_path(@project),
                class: "inline-flex items-center rounded-xl bg-white px-5 py-2.5 text-sm font-medium text-ink-900 ring-1 ring-sand-200 hover:ring-sand-300" %>
              <%= link_to "Destroy this project", @project,
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this project?" },
                class: "inline-flex items-center rounded-xl bg-rosewood-50 px-5 py-2.5 text-sm font-medium text-rosewood-700 ring-1 ring-rosewood-100 hover:bg-rosewood-100" %>
            <% end %>
          </div>
        </div>
      </div>

